<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="/css/usercart.css">
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            <div class="logo">Shopping Cart</div>
            <div class="nav-buttons">
                <button class="nav-btn">Home</button>
                <button class="nav-btn">LogOut</button>
            </div>
        </header>

        <!-- Cart Section -->
        <section class="cart">
            <h2 class="cart-title">Shopping Cart</h2>

            <!-- Cart Table -->
            <table class="cart-table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><img src="product.jpg" alt="Product Image" class="cart-image"></td>
                        <td>Product Name</td>
                        <td>₹100</td>
                        <td>2</td>
                        <td>₹200</td>
                        <td><button class="btn-remove">Remove</button></td>
                    </tr>
                    <tr>
                        <td><img src="product.jpg" alt="Product Image" class="cart-image"></td>
                        <td>Product Name</td>
                        <td>₹150</td>
                        <td>1</td>
                        <td>₹150</td>
                        <td><button class="btn-remove">Remove</button></td>
                    </tr>
                </tbody>
            </table>

            <!-- Footer Section -->
            <div class="cart-footer">
                <div class="total-price">Grand Total: ₹350</div>
                <button class="btn-checkout" onclick="window.location.href='/usercheckout'">Proceed to Checkout</button>
            </div>
        </section>
    </div>
</body>
</html>
