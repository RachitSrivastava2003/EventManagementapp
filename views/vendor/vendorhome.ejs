<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vendor List</title>
    <link rel="stylesheet" href="/css/vendorpage.css">
</head>
<body>
    <!-- Header Section -->
    <header class="header">
        <button class="btn btn-nav">Home</button>
        <h2>Vendor</h2>
        <button onclick="window.location.href='./home'" class="btn btn-nav">LogOut</button>
    </header>

    <!-- Main Vendor Cards -->
    <section class="vendor-cards">
        <%for(vendor of vendors){%>
        <div class="card">
            <h3><%=vendor.username%></h3>
            <p><%=vendor.gmail%></p>
            <button onclick="window.location.href='./userproduct/<%=vendor.userid%>'" class="btn shop-btn">Shop Item</button>
        </div>
        <%}%>
    </section>
</body>
</html>
